@model IEnumerable<Listovki_TSP_Uni.Models.KormuvaneModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Всички изпити</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.izpitvasht)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.instruktor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tochki)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.chasoveKarani)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.izpitvasht)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.instruktor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tochki)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.chasoveKarani)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
