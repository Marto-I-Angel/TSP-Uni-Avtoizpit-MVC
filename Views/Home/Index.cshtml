@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Автоизпит</h1>
        @if (User.IsInRole("Admin"))
        {
        <div class="flex-container">
            <div class="flex border-primary border">
                <a class="nav-link text-dark" asp-area="" asp-controller="IzpitModels" asp-action="Index">
                    <h3>Кормуване</h3>
                    <p>Записване резултат от кормуване.</p>
                </a>
            </div>
            <div class="flex border-primary border">
                <a class="nav-link text-dark" asp-area="" asp-controller="VuprosModels" asp-action="Create">
                    <h3>Създаване на въпрос</h3>
                    <p>Създаване на въпрос и <br> добавянето му в базата от данни.</p>
                </a>
            </div>
        </div>
        }
        <div class="flex-container">

            <div class="flex border-primary border">
                <a class="nav-link text-dark" asp-area="" asp-controller="ListovkaModels" asp-action="Create">
                    <h3>Решаване на листовка</h3>
                    <p>Генериране на листовка с <br> 40 произволни въпроса и решаването ѝ.</p>
                </a>
            </div>

            <div class="flex border-primary border">
                <a class="nav-link text-dark" asp-area="" asp-controller="IzpitModels" asp-action="CheckExam">
                    <h3>Изпит</h3>
                    <p>Листовка и кормуване</p>
                </a>
            </div>
        </div>

    </div>
